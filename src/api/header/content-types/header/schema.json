  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": false
    },
    "logoWidth": {
      "type": "integer",
      "min": 16,
      "max": 1024,
      "default": 160
    },
    "navigation": {
      "type": "component",
      "repeatable": true,
      "component": "shared.nav-item"
    },
    "ctaButton": {
      "type": "component",
      "repeatable": false,
      "component": "shared.cta-link"
    }
  }
}
