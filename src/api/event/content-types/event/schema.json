{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "seoGoal": {
      "type": "text",
      "required": false
    },
    "subtitle": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "timezone": {
      "type": "string",
      "default": "Europe/Berlin"
    },
    "locationType": {
      "type": "enumeration",
      "enum": [
        "on-site",
        "online",
        "hybrid"
      ],
      "default": "on-site"
    },
    "venueName": {
      "type": "string"
    },
    "address": {
      "type": "component",
      "component": "shared.address"
    },
    "onlineEventUrl": {
      "type": "string",
      "description": "Link to the livestream or virtual meeting room"
    },
    "registrationLink": {
      "type": "string"
    },
    "registrationDeadline": {
      "type": "datetime"
    },
    "organizer": {
      "type": "string"
    },
    "audience": {
      "type": "string",
      "description": "Prim√§re Zielgruppe / Besucherprofil"
    },
    "contactEmail": {
      "type": "email"
    },
    "contactPhone": {
      "type": "string"
    },
    "priceDetails": {
      "type": "string"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "eventStatus": {
      "type": "enumeration",
      "enum": [
        "scheduled",
        "postponed",
        "cancelled",
        "sold-out"
      ],
      "default": "scheduled"
    },
    "capacity": {
      "type": "integer",
      "min": 0
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "speakers": {
      "type": "component",
      "component": "shared.team-member",
      "repeatable": true
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "cta": {
      "type": "component",
      "component": "shared.cta",
      "repeatable": false
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "hideLeftSidebar": {
      "type": "boolean",
      "default": false
    },
    "hideRightSidebar": {
      "type": "boolean",
      "default": false
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "blocks.hero",
        "blocks.services",
        "blocks.about",
        "blocks.gallery",
        "blocks.contact",
        "blocks.image",
        "blocks.card-grid",
        "blocks.quote",
        "blocks.text",
        "blocks.pricing-table",
        "blocks.product-slider",
        "blocks.space",
        "blocks.button-group",
        "blocks.richtext-columns",
        "blocks.cta",
        "blocks.media-text"
      ]
    }
  }
}
