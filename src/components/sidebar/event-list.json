{
  "collectionName": "components_sidebar_event_lists",
  "info": {
    "displayName": "Event List",
    "description": "Shows upcoming events in the sidebar"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "text"
    },
    "limit": {
      "type": "integer",
      "min": 1,
      "max": 50,
      "default": 5
    },
    "includePast": {
      "type": "boolean",
      "default": false
    },
    "featuredOnly": {
      "type": "boolean",
      "default": false
    },
    "showStartDate": {
      "type": "boolean",
      "default": true
    },
    "showLocation": {
      "type": "boolean",
      "default": true
    },
    "cta": {
      "type": "component",
      "repeatable": false,
      "component": "shared.cta-link"
    }
  }
}
